- var title = 'Angularの練習 TODO LIST'
include ./common/_layout
block body
  h1= title
  div(ng-controller="MainCtrl")
    ul
      li(ng-repeat="task in tasks")
        label(class="task-{{task.done}}")
          input(type="checkbox", ng-model="task.done")
          | {{task.body}}
  // debug
  pre {{user|json}}
